@model EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Yazar Kayıt</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                @using (Html.BeginForm("Index", "Register", FormMethod.Post))
                {
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">Adınız Soyadınız</label>
                            @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control" })
                            <small>
                                @Html.ValidationMessageFor(x => x.WriterName, "", new { @class = "text-danger font-italic" })
                            </small>
                            @*<input type="text" class="form-control" name="WriterName" id="validationDefault01" placeholder="" required="">*@
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">E-posta adresiniz</label>
                            @Html.TextBoxFor(x => x.WriterEmail, new { @class = "form-control" })
                            <small>
                                @Html.ValidationMessageFor(x => x.WriterEmail, "", new { @class = "text-danger font-italic" })
                            </small>
                            @*<input type="email" class="form-control" name="WriterEmail" id="validationDefault02" placeholder="" required="">*@
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Parola</label>
                            @Html.TextBoxFor(x => x.WriterPassword, new { @class = "form-control" })
                            <small>
                                @Html.ValidationMessageFor(x => x.WriterPassword, "", new { @class = "text-danger font-italic" })
                            </small>
                            @*<input type="password" class="form-control" name="WriterPassword" id="password1" placeholder="" required="">*@
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Profil Görseli</label>
                            @Html.TextBoxFor(x => x.WriterImage, new { @class = "form-control" })
                            <small>
                                @Html.ValidationMessageFor(x => x.WriterImage, "", new { @class = "text-danger font-italic" })
                            </small>
                            @*<input type="text" class="form-control" name="WriterImage" id="password2" placeholder="" required="">*@
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Kayıt ol</button>
                    <p>
                        <a href="#" id="btn1">Tüm şartları okudum, kabul ediyorum.</a>
                    </p>
                }
            </div>
        </div>
    </div>
</section>

@*Tüm şartları okudum popup*@
<script>
    $('#btn1').click(function () {
        swal("Abonelik Sözleşmesi", "Bu siteye vermiş olduğunuz email adresi üzerinden sizlere, bilgi ve haber konularında e-postalar gönderilebilir. Bu postalar hiçbir zaman spam ölçüsüne varmayacaktır. Eğer eposta bülteninden çıkmak isterseniz mail/ileti dizini durdurabilirisniz. Parola ve mail adresiniz şifrelenmiş formmatta veritabanlarımızda saklanmaktadır.");
    });
</script>